<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/navi_text"
        />
    <View
        android:id="@+id/split_line"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/palegray"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/split_line"
        android:textSize="@dimen/navi_text"
        />
    <View
        android:id="@+id/split_line2"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/palegray"
        android:layout_below="@id/address"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        />

    <Button
        android:id="@+id/driveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stringDriveHere"
        android:layout_below="@id/split_line2"
        android:textSize="@dimen/navi_button_text"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:background="@color/map_buttonn"/>


</RelativeLayout>
